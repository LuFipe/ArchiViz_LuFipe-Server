doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Document
	body
		header
		main
			form(action="/criarInformacao", method="post", enctype="multipart/form-data", style="display:grid")
				label(for="titulo") TITULO
				input(type="text", name="titulo")

				label(for="nivel") NIVEL
				select(name="nivel")
					option(value=1) 1
					option(value=2) 2
					option(value=3) 3
					option(value=4) 4
					option(value=5) 5

				label(for="tipo") TIPO DO ICONE
				select(name="tipo")
					option(value="software") SOFTWARE
					option(value="hobbie") HOBBY
					option(value="contato") CONTATO

				label(for="arquivo") ICONE
				input(type="file", name="arquivo")

				button(type="submit") criar postagem
		footer